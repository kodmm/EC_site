<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
        <table class="table">
            <thead>
                <tr>
                    <th>購入日時</th>
                    <th>購入者</th>
                    <th>注文ステータス</th>
                </tr>
            </thead>
            <tbody>
            <% @orders.each do |order| %>
                <tr>
                    <td><%= link_to order.created_at, admins_order_path(order.id) %></td>
                    <td><%= EndUser.with_deleted.find(order.end_user_id).name %></td>
                    <td><%= order.order_status %></td>
                </tr>
            <% end %>
            </tbody>
        </table>
    </div>
</div>


