<!DOCTYPE html>
<html>
  <head>
    <title>ECsite1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header container">
      <div class="row">
        <div class="col-md-3 col-md-offset-1">
          <%= link_to "LOGO", root_path %>
        </div>
        <div class="col-md-6" id="sidemenu">
          <ul class="nav navbar-nav navbar-right">
            <% if end_user_signed_in? %>
              <li class="">
                <%= link_to "Cart", cart_items_path %>
              </li>
              <li class="">
                <%= link_to "Mypage",mypage_end_user_path %>
              </li>
              <li class="">
                <%= link_to "About", about_path %>
              </li>
              <li class="">
                <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %>
            <% elsif admin_signed_in? %>
              <li class="">
                <%= link_to "受注一覧", admins_orders_path %>
              </li>
              <li class="">
                <%= link_to "商品登録", new_admins_item_path %>
              </li>
              <li class="">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
              </li>

            <% else %>
              <li class="">
                <%= link_to "ログイン", new_end_user_session_path %>
              </li>
              <li class="">
                <%= link_to "サインアップ", new_end_user_registration_path %>
              </li>
            <% end %>
          </ul>
        </div>

        </div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
