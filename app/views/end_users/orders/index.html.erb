<div class="container">
    <div class="row">
        <div class="col-md-9 col-md-offset-2">
            <h2>注文履歴一覧</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>注文日</th>
                        <th>配送先</th>
                        <th>注文商品</th>
                        <th>支払金額</th>
                        <th>ステータス</th>
                        <th>注文詳細</th>
                    </tr>
                </thead>
                <tbody>
                    <% current_end_user.orders.each do |order| %>
                        <tr>
                            <td><%= order.created_at.to_s(:datetime_jp) %></td>
                            <td><%= order.postal_code%><br>
                                <%= order.street_address %><br><%= order.address%>
                            </td>
                            <td>
                            <% order.order_details.each do |order_detail| %>
                                <%= order_detail.item.name %><br>
                            <% end %>
                            </td>
                            <td><%= order.total_price %>円</td>
                            <td><%= order.order_status %></td>
                            <td><%= link_to "表示する", order_path(order.id), class: "btn btn-sm btn-success" %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>                    