<div class="container">
    <div class="row">
        <div class="col-md-5 col-md-offset-1">
            <h3>注文履歴詳細</h3>
            <table class="table">
                <tr>
                    <th>注文日</th>
                    <td><%= @order.created_at %></td>
                </tr>
                <tr>
                    <th>配送先</th>
                    <td><%= @order.postal_code%><br>
                        <%= @order.street_address %><br><%= @order.address%>
                    </td>
                </tr>
                <tr>
                    <th>支払い方法</th>
                    <td><%= @order.payment%></td>
                </tr>
                <tr>
                    <th>ステータス</th>
                    <td><%= @order.order_status%></td>
                </tr>
            </table>
        </div>
        <div class="col-md-3 col-md-offset-1">
            <h3>請求情報</h3>
            <table class="table">
                <tr>
                    <th>商品合計</th>
                    <td><%= @order.total_price%></td>
                </tr>
                <tr>
                    <th>配送料</th>
                    <td><%= @order.postage%></td>
                </tr>
                <tr>
                    <th>ご請求額</th>
                    <td><%= (@order.total_price + @order.postage).round %></td>
                </tr>
            </table>
        </div>
                
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <h3>注文内容</h3>
            <table class="table">
                <tr>
                    <th>商品</th>
                    <th>単価(税込み)</th>
                    <th>個数</th>
                    <th>小計</th>
                </tr>
                <% @order.order_details.each do |order_detail| %>
                <tr>
                    <td><%= order_detail.item.name %></td>
                    <td><%= order_detail.price %></td>
                    <td><%= order_detail.amount %></td>
                    <td><%= (order_detail.price * order_detail.amount).round %></td>
                </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>
