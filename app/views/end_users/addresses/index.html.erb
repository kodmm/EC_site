<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            <h2>配送先/登録一覧</h2>
            <%= form_for(@address) do |f| %>
            <table class="table table-hover table-inverse">
                <tbody>
                    <tr>
                         <td><%= f.label :postal_code, "郵便番号" %></td>
                          <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "郵便番号" %></td>
                    </tr>
                    <tr>
                        <td><%= f.label :street_address, "住所" %></td>
                        <td><%= f.text_field :street_address, autofocus: true, autocomplete: "street_address", placeholder: "住所" %></td>
                    </tr>　
                    <tr>
                       <td><%= f.label :address, "宛名" %></td>
                        <td><%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "宛名" %></td>
                    </tr>
                </tbody>
            </table>
            <div class="col-md-4 col-md-offset-6">
                <span><%= f.submit "登録する", class: "btn btn-primary" %></span>
            </div>
            <% end %>
        </div>
    </div>
    <br>
    <br>
    <div class="row col-md-8 col-md-offset-1">
        <table class="table">
            <thead>
                <tr>
                    <th>郵便番号</th>
                    <th>住所</th>
                    <th>宛名</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <% current_end_user.addresses.each do |address| %>
                <tr>
                    <td>〒<%= address.postal_code %></td>
                    <td><%= address.street_address %></td>
                    <td><%= address.address %></td>
                    <td><span><%= link_to "編集する", edit_address_path(address.id), class:"btn btn-primary" %></span>　<span><%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger"%></span></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

