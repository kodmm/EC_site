<h1>マイページ</h1>
<div class="container">
    <div class="row">
        <div class="col-md-5 col-md-offset-2 flex">
            <h2>登録情報</h2>
            <button type="button" class="btn btn-primary"><%= link_to "編集する", edit_end_user_path %></button>
            <button type="button" class="btn btn-primary link_color"><%= link_to "パスワードを変更する", edit_end_user_password_path %></button>
        </div>
        
    </div>
    <br>
    <div class="row">
        <div class="col-md-6 col-md-offset-2">
        
            <table class="table">
                <tbody>
                    <tr>
                        <td>氏名</td>
                        <td><%= current_end_user.surname %> <%= current_end_user.name %></td>
                    </tr>
                    <tr>
                        <td>カナ</td>
                        <td><%= current_end_user.kana_surname %>　<%= current_end_user.kana_name %>
                        </td>
                    </tr>
                    <tr>
                        <td>郵便番号</td>
                        <td>〒<%= current_end_user.postal_code %></td>
                        <!--- slice.(1..4)で分割表示することも可--->
                    </tr>
                    <tr>
                        <td>電話番号</td>
                        <td><%= current_end_user.phone_number %></td>
                    </tr>
                    <tr>
                        <td>メールアドレス</td>
                        <td><%= current_end_user.email %></td>
                    </tr>
                </tbody>
            </table>
            <br>
            <h2>登録情報</h2>
           <span><button type="button" class="btn btn-primary"><%= link_to "配達先", addresses_path %></button></span>
        </div>
    </div>
</div>