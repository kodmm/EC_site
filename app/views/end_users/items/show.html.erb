<div class="container">
    <div class="row margin">
         <div class="col-md-3 col-md-offset-1">
            <table class="table">
                <tr>
                    <th>ジャンル検索</th>
                </tr>
                <% @genres.each do |genre| %>
                <tr>
                    <td><%= genre.name %><td>
                </tr>
                <% end %>
            </table>
        </div>
        <div class="col-md-3 col-md-offset-1">
            <%= attachment_image_tag @item, :image, :fill, 250, 200, format:'jpeg', fallback: "no_image.jpg" %>
        </div>
        <div class="col-md-4 col-md-offset-0.5">
            <table class="table">
                <tbody>
                
                    <tr>
                        <td colspan="3"><h3><%= @item.name%></h3></td>
                    </tr>
                    <tr>
                        <td colspan="3"><%= @item.details %></td>
                    </tr>
                    <tr>
                        <td colspan="3">&yen;<%= (@item.price * 1.10).round %>(税込)</td>
                    </tr>
                    <%= form_for @cart_item, url: cart_items_path do |f| %>
                        <tr>
                            <td><%= f.hidden_field :item_id, :value => @item.id %></td>
                            <td><%= f.number_field :amount , min: "1", placeholder: "個数選択" %></td>
                            <td><%= f.submit "カートに入れる" , class: "btn btn-primary" %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>